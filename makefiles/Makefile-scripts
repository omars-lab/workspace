# Makefile-scripts
# Examples of calling each script in this repository
# See scripts.md for full documentation

SHELL := /bin/bash
MAKEFILE_DIR := $(shell dirname $(realpath $(lastword $(MAKEFILE_LIST))))
SCRIPTS_DIR := $(MAKEFILE_DIR)/../scripts
.PHONY: help

help:
	@echo "Available script examples:"
	@echo "  make -f makefiles/Makefile-scripts <script-name>"
	@echo ""
	@echo "See docs/scripts.md for full documentation"

