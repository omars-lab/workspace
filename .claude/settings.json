{
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true
  },
  "plansDirectory": ".claude/plans",
  "alwaysThinkingEnabled": false,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline-bar.sh"
  },
  "permissions": {
    "allow": [
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(sed:*)",
      "Bash(tr:*)",
      "Bash(cut:*)",
      "Bash(pbpaste:*)",
      "Bash(git rev-parse:*)"
    ]
  }
}
